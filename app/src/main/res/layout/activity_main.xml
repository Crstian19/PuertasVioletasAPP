<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="space.fosc.PuertasVioletasAPP.MainActivity">

    <android.support.design.widget.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/navigation"/>
    <ImageButton
            android:layout_width="128dp"
            android:layout_height="128dp" app:srcCompat="@drawable/logo_grande"
            android:id="@+id/button_arriba"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="fitCenter"
            app:layout_constraintHorizontal_bias="0.498" android:layout_marginTop="300dp"
    />
    <ImageButton
            android:layout_width="161dp"
            android:layout_height="137dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/button_abajo"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="84dp" app:layout_constraintTop_toBottomOf="@+id/button_arriba"/>
    <ImageView
            android:src="@drawable/logo"
            android:layout_width="173dp"
            android:layout_height="248dp" android:id="@+id/imageView6"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="125dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="114dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="28dp" app:layout_constraintBottom_toTopOf="@+id/button_arriba"/>

</android.support.constraint.ConstraintLayout>